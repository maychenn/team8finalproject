@model team8finalproject.Models.Dispute

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Dispute</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DisputeID" />
            <div class="form-group">
                <label asp-for="NewAmount" class="control-label"></label>
                <input asp-for="NewAmount" class="form-control" />
                <span asp-validation-for="NewAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Delete" /> @Html.DisplayNameFor(model => model.Delete)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="ManagerComment" class="control-label"></label>
                <input asp-for="ManagerComment" class="form-control" />
                <span asp-validation-for="ManagerComment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DisputeStatus" class="control-label"></label>
                <select asp-for="DisputeStatus" class="form-control"></select>
                <span asp-validation-for="DisputeStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
