@using Microsoft.AspNetCore.Identity
@model team8finalproject.Models.ViewModels.IndexViewModel

@{
    ViewBag.Title = "Change Password";
}
@if (this.User.IsInRole("Customer") && Model.New == false)
{
    <h2>@ViewBag.Title.</h2>

    <div>
        <h4>Change your account settings</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>User Name:</dt>
            <dd>@Model.UserName</dd>

            <dt>First Name:</dt>
            <dd>@Model.FirstName</dd>

            <dt>Middle Initial:</dt>
            <dd>@Model.MiddleInitial</dd>

            <dt>Last Name:</dt>
            <dd>@Model.LastName</dd>

            <dt>Email:</dt>
            <dd>@Model.Email</dd>

            <dt>Phone Number:</dt>
            <dd>@Model.PhoneNumber</dd>

            <dt>Birth Date:</dt>
            <dd>@Model.Birthdate</dd>

            <dt>Street Address:</dt>
            <dd>@Model.StreetAddress</dd>

            <dt>City:</dt>
            <dd>@Model.City</dd>

            <dt>State:</dt>
            <dd>@Model.State</dd>

            <dt>Zip Code:</dt>
            <dd>@Model.ZipCode</dd>


            <dt>Password:</dt>
            <dd>
                [
                @if (Model.HasPassword)
                {
                    @Html.ActionLink("Change your password", "ChangePassword")
                }
                ]

            </dd>
        </dl>
    </div>
}