@model team8finalproject.Models.PortfolioDetail

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>PortfolioDetail</h4>
<hr />
@if (User.IsInRole("New Customer") || Model.Product.ProductType != ProductTypes.Portfolio)
{
    <a asp-action="CreatePortfolio" asp-controller="Product" class="btn btn-success">Create a Stock Portfolio</a>

}
@if (User.IsInRole("Customer") || Model.Product.ProductType == ProductTypes.Portfolio)
{
   <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="NumShares" class="control-label"></label>
                    <input asp-for="NumShares" class="form-control" />
                    <span asp-validation-for="NumShares" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Purchase" asp-route-stockID="@Model.Stock.StockID" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
}
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
