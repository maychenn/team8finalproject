@model team8finalproject.Models.StandardAccount
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Index ";
}

<h1>Welcome to the Bevo's Bank and Trust!</h1>

<h4>Apply for a product:</h4>
<a asp-action="Create" asp-controller="StandardAccount" asp-route-AccountType="Checking" class="btn btn-success">Checkings</a>
<a asp-action="Create" asp-controller="StandardAccount" asp-route-AccountType="Savings" class="btn btn-success">Savings</a>
<a asp-action="Create" asp-controller="Portfolio" class="btn btn-success">Stock Portfolio</a>
<a asp-action="Create" asp-controller="IRA" class="btn btn-success">Individual Retirement Accounts (IRAs)</a>
<p></p>
@if (User.Identity.IsAuthenticated != true)
{
    <a asp-action="Register" asp-controller="Account" class="btn btn-success">Make an Account</a>
}


@if (User.Identity.IsAuthenticated)
{
    <a asp-action="Index" asp-controller="Account" class="btn btn-success">View Accounts</a>
}
@if (User.IsInRole("Admin"))
{
    <a asp-action="Index" asp-controller="RoleAdmin" class="btn btn-success">Manage Users</a>
}

